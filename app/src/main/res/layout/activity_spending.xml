<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TabHost
        android:id="@+id/spendingtabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="276dp"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="345dp"
                android:layout_height="250dp"
                android:layout_weight="0.02">

                <LinearLayout
                    android:id="@+id/month_Tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include

                        android:id="@+id/month_mid"

                        layout="@layout/activity_spending_month"

                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/week_Tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include

                        android:id="@+id/week_mid"

                        layout="@layout/activity_spending_week"

                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/day_Tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include

                        android:id="@+id/day_mid"

                        layout="@layout/activity_spending_day"

                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"

                        />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
