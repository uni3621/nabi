<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:id="@+id/home_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <include

                        android:id="@+id/home_top"

                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"

                        layout="@layout/activity_home"

                        />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/traffic_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <include

                        android:id="@+id/traffic_top"

                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"

                        layout="@layout/activity_traffic"

                        />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/weather_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <include

                        android:id="@+id/weather_top"

                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"

                        layout="@layout/activity_weather"

                        />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/spending_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <include

                        android:id="@+id/spending_top"

                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"

                        layout="@layout/activity_spending"

                        />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/mypage_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <include

                        android:id="@+id/mypage_top"

                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"

                        layout="@layout/activity_mypage"

                        />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
