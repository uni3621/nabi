<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/busInfoStationName"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="땡땡역"
        android:textColor="@color/nabiText"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.25">

        <TextView
            android:id="@+id/busInfoPlateNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="경기2542 가나버스"
            android:textAlignment="center"
            android:textColor="@color/nabiText"
            android:textSize="8sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.25">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:srcCompat="@drawable/buscolumn" />

        <ImageView
            android:id="@+id/busInfoImg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:srcCompat="@drawable/busstationdown" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:srcCompat="@drawable/buscolumn" />
    </LinearLayout>
</LinearLayout>